<!-- pages/user/fadan.wxml -->
<view class="cu-bar justify-left bg-white margin-top">
    <view class="action sub-title">
        <text class="text-xl text-bold text-green">填写信息</text>
        <text class="bg-green" style="width:2rem"></text>
        <!-- last-child选择器 -->
    </view>
</view>
<!-- 填写信息区域 -->
<form bindsubmit="saveData">
    <view class="cu-form-group border-top">
        <view class="title">选择区服</view>
        <picker mode="multiSelector" bindchange="MultiChange" bindcolumnchange="MultiColumnChange" value="{{multiIndex}}" range="{{multiArray}}">
            <view class="picker_text">
                {{multiArray[0][multiIndex[0]]}} {{multiArray[1][multiIndex[1]]}} {{multiArray[2][multiIndex[2]]}}
            </view>
        </picker>
    </view>
    <view class="cu-form-group margin-top">
        <view class="title">订单任务</view>
        <input placeholder="如:黄金一1星至钻石三一星"></input>
    </view>
    <view class="cu-form-group">
        <view class="title">游戏账号</view>
        <input placeholder="请输入您的游戏账号"></input>
    </view>
    <view class="cu-form-group">
        <view class="title">游戏密码</view>
        <input placeholder="请输入您的游戏密码"></input>
    </view>
    <view class="cu-form-group">
        <view class="title">角色名字</view>
        <input placeholder="请输入您的游戏密码"></input>
    </view>
    <view class="cu-form-group">
        <view class="title">订单佣金</view>
        <input placeholder="请输入您的订单佣金"></input>
    </view>
    <view class="cu-form-group">
        <view class="title">手机号码</view>
        <input placeholder="请输入您的手机号"></input>
        <view class="cu-capsule radius">
            <view class="cu-tag bg-blue">+86</view>
            <view class="cu-tag line-blue">中国大陆</view>
        </view>
    </view>

    <!-- !!!!! placeholder 在ios表现有偏移 建议使用 第一种样式 -->
    <view class="cu-form-group margin-top">
        <textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaAInput" placeholder="请输入您的账号英雄数量皮肤数量及铭文等级"></textarea>
    </view>
    <view class="cu-form-group margin-top">
        <textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaAInput" placeholder="请输入您的特殊要求"></textarea>
    </view>

    <button form-type="submit" class="btn_saveData">
        提交
    </button>
      
</form>